@import "../../styles/theme.styl";

.comp-home-title
  display flex
  flex-direction row
  align-items center
  padding 0 24px
  height 100px
  .comp-home-title__txt
    color $black
    font-size 32px
    font-weight bold
  .comp-home-title__content
    flex 1
.comp-home-title__link
  display flex
  flex-direction row
  align-items center
  &-txt
    font-size 26px
    line-height 26px
    color $text-color-light
  &-img
    margin-left 10px
    width 14px
    height 24px
