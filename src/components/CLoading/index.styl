.loading_components
  position relative
  left 0
  top 0
  z-index 100
  width 100%
  height 120px
  background url(./assets/loading.gif) 50% no-repeat
  background-size 80px
  background-color white
  display flex
  align-items center
  justify-content center
  padding 40px 0
  box-sizing border-box
  &.fullScreen
    position absolute
    height 100%
  &.hide
    display none
